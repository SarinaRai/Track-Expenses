@page "/cleardebt"
@using MauiApp1.Components.Model
@using MauiApp1.Components.Layout
@using MauiApp1.Services
@layout MainLayout
@inject MainService MainService
@inject NavigationManager NavigationManager
@inject StateService StateService

<h3>Clear Debts</h3>

<div class="form-group">
    <label for="amount">Enter Amount to Clear:</label>
    <input id="amount" type="number" @oninput="ValidateAmount" @bind="AmountInput" class="form-control" />
    <span class="text-danger">@Message</span>
</div>

<div class="button-container">
    <button @onclick="ClearOut" class="btn btn-primary" disabled="@(!Amount.HasValue || Amount <= 0)">
        Clear Debt
    </button>
</div>

<hr />

<h4>Debt Summary</h4>
<ul>
    <li>Total Debt Amount: @TotalDebtAmount:</li>
    <li>Paid Debt Amount: @ClearedDebt:</li>
    <li>Remaining Debt: @RemainingDebt:</li>
</ul>

<style>
    /* Style the page heading */
    h3 {
        font-size: 1.8rem;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        text-align: center;
        border-bottom: 2px solid #3498db;
        display: inline-block;
        padding-bottom: 0.3rem;
    }

    /* Form container */
    .form-group {
        margin: 1rem auto;
        max-width: 500px;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

        /* Form labels */
        .form-group label {
            font-size: 1.1rem;
            color: #34495e;
            font-weight: bold;
        }

    /* Input fields */
    .form-control {
        padding: 0.8rem;
        font-size: 1rem;
        border: 1px solid #bdc3c7;
        border-radius: 5px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 8px rgba(52, 152, 219, 0.3);
            outline: none;
        }

    /* Validation message */
    .text-danger {
        font-size: 0.9rem;
        color: #e74c3c;
    }

    /* Button container */
    .button-container {
        text-align: left;
        margin: 1rem auto;
        max-width: 500px;
    }

    /* Button styles */
    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        color: white;
        font-size: 1rem;
        padding: 0.8rem 1.5rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:disabled {
            background-color: forestgreen;
            border-color: forestgreen;
            cursor: not-allowed;
        }

    /* Debt summary section */
    h4 {
        font-size: 1.5rem;
        color: #2c3e50;
        margin-top: 2rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 1rem auto;
        max-width: 500px;
        border: 1px solid #ecf0f1;
        border-radius: 5px;
        background-color: #f9f9f9;
        padding: 1rem;
        font-size: 1.1rem;
    }

        ul li {
            padding: 0.5rem 0;
            border-bottom: 1px solid #ecf0f1;
            color: ##218838;
            ;
        }

            ul li:last-child {
                border-bottom: none;
            }
</style>
