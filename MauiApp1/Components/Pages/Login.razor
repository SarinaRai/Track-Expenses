@page "/"
@using MauiApp1.Services
@using MauiApp1.Components.Layout
@layout HomeLayout
@inject MainService MainService
@inject StateService StateService
@inject NavigationManager NavigationManager
@using MauiApp1.Components.Model


<body class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8">
        <h3 class="text-2xl font-semibold text-center text-gray-800 mb-6">Login</h3>

        <form class="space-y-4" @onsubmit="LoginUser">
            <!-- Username -->
            <div class="flex flex-col">
                <label for="username" class="mb-1 text-sm font-medium text-gray-700">Username</label>
                <input id="username" @bind="Username"
                       class="px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300 focus:outline-none border-gray-300"
                       required />
            </div>

            <!-- Password -->
            <div class="flex flex-col">
                <label for="password" class="mb-1 text-sm font-medium text-gray-700">Password</label>
                <input id="password" @bind="Password" type="password"
                       class="px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300 focus:outline-none border-gray-300"
                       required />
            </div>

            <!-- Currency Selector -->
            <div class="flex flex-col">
                <label for="currency" class="mb-1 text-sm font-medium text-gray-700">Currency Type</label>
                <select id="currency" @bind="SelectedCurrency" placeholder="NPR or USD"
                        class="px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300 focus:outline-none border-gray-300"
                        required>
                    <option value="NPR">Nepali Rupee (NPR)</option>
                    <option value="USD">US Dollar (USD)</option>
                </select>
            </div>

            <!-- Display Error or Success Message -->
            @if (!string.IsNullOrEmpty(Message))
            {
                    <p class="text-center mt-2 @(Message.Contains("successful") ? "text-green-500" : "text-red-500")">
                    @Message
                    </p>
            }

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full py-2 px-4 bg-green-500 text-white rounded-lg hover:bg-green-600 focus:ring focus:ring-green-300 focus:outline-none">
                Login
            </button>

            <!-- Registration Link -->
            <div class="block mt-2 text-center">
                <label class="text-black">Don't have an account? </label>
                <a href="/register" class="text-red-500 hover:underline">Register</a>
            </div>
        </form>
    </div>
</body>